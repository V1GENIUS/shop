<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context="Fragments.wishlistFragment">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/wishlist"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="@string/wishlist"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20sp"
            android:textSize="40sp"
            android:paddingTop="-10dp"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="330dp"
            android:src="@drawable/search" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="360dp"
            android:background="@color/white"
            android:src="@drawable/order" />


        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/wishlist"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="60dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="240dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginStart="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#191414">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="146dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/pendrive"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="35dp"
                            android:text="SanDisk 32gb pendrive 32 GB Pen Drive"
                            android:textSize="12sp"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:paddingStart="5dp"
                            android:textColor="@color/white"
                            android:maxLines="2"
                            android:ellipsize="end" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="15dp"
                            android:text="(Black, Red)"
                            android:textSize="9sp"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:paddingStart="5dp"
                            android:textColor="#C6B6B6"
                            android:maxLines="1"
                            android:ellipsize="end" />
                        <LinearLayout
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="25dp"
                                android:text="Rs.500"
                                android:paddingStart="5dp"
                                android:padding="0dp"
                                android:textSize="15dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                />
                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:padding="5dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginStart="0dp"
                                android:background="@drawable/white_heart"
                                />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/pendrive"
                                android:layout_width="50dp"
                                android:layout_height="35dp"
                                android:layout_marginVertical="1dp"
                                android:layout_marginStart="7dp"
                                android:text="@string/buy"
                                android:background="@drawable/button_shape"
                                android:textColor="#FAFAFB"
                                android:textSize="14sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="240dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginStart="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/black">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="146dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/mobile"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="35dp"
                            android:text="Xiaomi 12 Pro 5G (Noir Black, 256 GB)"
                            android:textSize="12sp"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:paddingStart="5dp"
                            android:textColor="@color/white"
                            android:maxLines="2"
                            android:ellipsize="end" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="15dp"
                            android:text="(12 GB RAM)"
                            android:textSize="9sp"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:paddingStart="5dp"
                            android:textColor="#C6B6B6"
                            android:maxLines="1"
                            android:ellipsize="end" />
                        <LinearLayout
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="25dp"
                                android:text="Rs. 41,999"
                                android:paddingStart="5dp"
                                android:padding="0dp"
                                android:textSize="15dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                />
                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:padding="5dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginStart="0dp"
                                android:background="@drawable/white_heart"
                                />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/mobile"
                                android:layout_width="50dp"
                                android:layout_height="35dp"
                                android:layout_marginVertical="1dp"
                                android:layout_marginStart="8dp"
                                android:text="@string/buy"
                                android:background="@drawable/button_shape"
                                android:textColor="#FAFAFB"
                                android:textSize="14sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="240dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginStart="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/black">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="146dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/t_shirt"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="35dp"
                            android:text="Men Typography Round Neck Cotton Blend"
                            android:textSize="12sp"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:paddingStart="5dp"
                            android:textColor="@color/white"
                            android:maxLines="2"
                            android:ellipsize="end" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="15dp"
                            android:text="Light Blue T-Shirt"
                            android:textSize="9sp"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:paddingStart="5dp"
                            android:textColor="#C6B6B6"
                            android:maxLines="1"
                            android:ellipsize="end" />
                        <LinearLayout
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="25dp"
                                android:text="Rs.500"
                                android:paddingStart="5dp"
                                android:padding="0dp"
                                android:textSize="15dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                />
                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:padding="5dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginStart="0dp"
                                android:background="@drawable/white_heart"
                                />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/t_shirt"
                                android:layout_width="50dp"
                                android:layout_height="35dp"
                                android:layout_marginVertical="1dp"
                                android:layout_marginStart="8dp"
                                android:text="@string/buy"
                                android:background="@drawable/button_shape"
                                android:textColor="#FAFAFB"
                                android:textSize="14sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="240dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginStart="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/black">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="146dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/t_shirt"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="35dp"
                            android:text="Men Typography Round Neck Cotton Blend"
                            android:textSize="12sp"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:paddingStart="5dp"
                            android:textColor="@color/white"
                            android:maxLines="2"
                            android:ellipsize="end" />
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="15dp"
                            android:text="Light Blue T-Shirt"
                            android:textSize="9sp"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:paddingStart="5dp"
                            android:textColor="#C6B6B6"
                            android:maxLines="1"
                            android:ellipsize="end" />
                        <LinearLayout
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="25dp"
                                android:text="Rs.500"
                                android:paddingStart="5dp"
                                android:padding="0dp"
                                android:textSize="15dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                />
                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:padding="5dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginStart="0dp"
                                android:background="@drawable/white_heart"
                                />
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/speaker1"
                                android:layout_width="50dp"
                                android:layout_height="35dp"
                                android:layout_marginVertical="1dp"
                                android:layout_marginStart="8dp"
                                android:text="@string/buy"
                                android:background="@drawable/button_shape"
                                android:textColor="#FAFAFB"
                                android:textSize="14sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>
        </ScrollView>
    </RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context="Fragments.CategoryFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20dp"
        android:paddingTop="-10dp"
        android:text="@string/category"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/search" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="749dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/fashions"
                app:cardBackgroundColor="#2E2D2D"
                app:cardCornerRadius="30dp"
                android:layout_width="348dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:background="#191111">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fashiongirl"
                        android:layout_width="68dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="24dp"
                        android:layout_marginBottom="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/fashion"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="33dp"
                        android:layout_marginTop="7dp"
                        android:layout_toEndOf="@+id/fashiongirl"
                        android:text="@string/fashion"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="179dp"
                        android:layout_height="41dp"
                        android:layout_below="@+id/text"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="33dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginBottom="7dp"
                        android:layout_toEndOf="@+id/fashiongirl"
                        android:text="@string/v"
                        android:textColor="#B3ABAB" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/mobiles"
                android:layout_width="348dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/fashions"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:background="#191111"
                app:cardBackgroundColor="#2E2D2D"
                app:cardCornerRadius="30dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/mobile"
                        android:layout_width="74dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="23dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/iphone"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="34dp"
                        android:layout_marginTop="13dp"
                        android:text="@string/mobiles"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="179dp"
                        android:layout_height="41dp"
                        android:layout_below="@+id/textView2"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="34dp"
                        android:layout_marginTop="-1dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/letest_iphone_and_realme_14_pro_and_more"
                        android:textColor="#B3ABAB" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/home"
                android:layout_width="348dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/mobiles"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:background="#191111"
                app:cardBackgroundColor="#2E2D2D"
                app:cardCornerRadius="30dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/sofa"
                        android:layout_width="108dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="9dp"
                        android:layout_marginBottom="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/sofa"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/homes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_toEndOf="@+id/sofa"
                        android:text="@string/home"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="179dp"
                        android:layout_height="41dp"
                        android:layout_below="@+id/homes"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="33dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginBottom="7dp"
                        android:layout_toEndOf="@+id/sofa"
                        android:text="@string/home_dacor_furniture_kids_furniture_and_more"
                        android:textColor="#B3ABAB" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Electronic"
                android:layout_width="348dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/home"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:background="#191111"
                app:cardBackgroundColor="#2E2D2D"
                app:cardCornerRadius="30dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/headphone"
                        android:layout_width="92dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="16dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/headphone"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/electronic"
                        android:layout_width="97dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="14dp"
                        android:text="@string/electronic"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="179dp"
                        android:layout_height="41dp"
                        android:layout_below="@+id/electronic"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="34dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="9dp"
                        android:text="@string/letest_iphone"
                        android:textColor="#B3ABAB" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/shoes"
                android:layout_width="348dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/Electronic"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:background="#191111"
                app:cardBackgroundColor="#2E2D2D"
                app:cardCornerRadius="30dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/shoes_image"
                        android:layout_width="84dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="27dp"
                        android:layout_marginBottom="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/shoes_"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="33dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/shoes_image"
                        android:text="@string/shoes"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="179dp"
                        android:layout_height="41dp"
                        android:layout_below="@+id/text1"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="33dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginBottom="7dp"
                        android:layout_toEndOf="@+id/shoes_image"
                        android:text="@string/top_wear_women_ethic_and_many_more"
                        android:textColor="#B3ABAB" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>